

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">


<style>

  body {
    font-family: "Ubuntu", sans-serif;
    text-align: center;
    margin: 0px;

  }
  a {
    text-decoration: none;
  }

  header {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #ded415;
    padding: 10px;
  }

  #intro {
    margin: 0px;
  }

  footer {
    display: flex;
    position: absolute;
    background: #ded415;
    bottom: 0px;
    width: 100%;
    height: 50px;
    justify-content: center;
    align-items: center;
  }



</style>







<html>




  <header id="main">
    <a href='/logout'>Log out</a>
    <h1 id="intro"> your games </h1>
    <a href='/user'>back</a>
  </header>



<div id="gamelinks">
  
  <% if (games[username] && games[username].length > 0) { %>
    <% for (let i = 0; i < games[username].length; i++) { %>
      <p>
        <a class="gameLinks" href="/game/<%= username %>/<%= games[username][i][0] %>" target="_blank"><%= games[username][i][0] %></a>
      </p>
    <% } %>
  <% } else { %>
    <p>No games available for this user.</p>
  <% } %>
    
</div>


    <footer>
      <a href="/addGamePage">Add Game/Remove Game</a>
    </footer>



</html>
